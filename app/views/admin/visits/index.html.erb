<div class="row">
  <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">List of Visas</h3> 
        </div>
        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table  class="table table-bordered table-striped dataTables-example" role="grid">
                  <thead>
                    <tr>
                      <th> Ref#</th>
                      <th> Name </th>
                      <th> Quantity </th>
                      <th>Sale Price</th>
                      <th>Paid Amount</th>
                      <th>Debit</th>
                      <th>Actual Cost</th>
                      <th> Margin </th>
                      <th> Status </th>
                      <th> Date </th>
                      <th class="col-xs-2">Actions</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @visits.each do |visit| %>
                      <tr>
                        <td> <%= visit.id %> </td>
                        <td> <%= visit.name %> </td>
                        <td> <%= visit.quantity %> </td>
                   <!--    <td> <%= visit.countryCode.present? ? country_name(visit.countryCode) : visit.countryCode %> </td> -->
                        <td> <%= visit.salePrice %> </td>
                        <td> <%= visit.paidAmount %> </td>                     
                        <td> <%= visit.debitAmount %> </td>
                        <td> <%= visit.actualCost %> </td>
                        <td> <%= visit.profit %> </td>
                        <td> <%= visit.status %> </td>

                        <td> <%= visit.updated_at.strftime("%d-%m-%Y") %> </td>

                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-eye"></i>'), admin_visit_url(visit), class: 'btn btn-sm btn-primary' %>
                            <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_admin_visit_url(visit), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), admin_visit_url(visit), class: 'btn btn-sm btn-danger',           method: :delete,
                                            data: { confirm: 'Are you sure you want to delete this ?' } %>
                          <%= link_to raw('<i class="fa fa-bank"></i>'), preview_admin_visit_url(visit), class: 'btn btn-sm btn-primary' %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>

                 
                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>


