<div class="row">
  <div class="col-xs-12">
    <div class="box">
              <div class="box-header">
                <h3 class="box-title"><%=@user.name%></h3>
                
              </div>
              <!-- /.box-header -->
              <div class="box-body no-padding">
                <table class="table table-striped">
                  <% for attribute in @user.attributes.keys do  %>
                    <tr>
                      <th style="width:200px;"> <%= attribute.humanize%></th>
                      <td> <%= @user.attributes[attribute].to_s %> </td>
                    </tr>
                  <% end %>
                </table>
              </div>
              <!-- /.box-body -->
            </div>
          </div>
        </div>