<div class="row">
  <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">List of Expenses</h3> 
        </div>
        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-hover table-bordered table-striped dataTables-example table-responsive" role="grid">
                  <thead>
                    <tr>
                      <th> Ref#</th>
                      <th> Employees salray </th>
                      <th> Ptcl bill </th>
                      <th> Electricity bill </th>
                      <th> Office rent </th>
                      <th> Motorcycle petrol </th>
                      <th> Car petrol </th>
                      <th> Office lunch </th>
                      <th> Date </th>
                      <th class="col-xs-2">Actions</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @expenses.each do |expense| %>
                      <tr>
                        <td> <%= expense.id %> </td>
                        <td> <%= expense.employees_salray %> </td>
                        <td> <%= expense.ptcl_bill %> </td>

                        <td> <%= expense.electricity_bill %> </td>
                        <td> <%= expense.office_rent %> </td>
                        <td> <%= expense.motorcycle_petrol %> </td>
                        <td> <%= expense.car_petrol %> </td>
                        <td> <%= expense.office_lunch %> </td>
                  

                        <td> <%= expense.updated_at.strftime("%d-%m-%Y") %> </td>

                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-eye"></i>'), admin_expense_url(expense), class: 'btn btn-sm btn-primary' %>
                            <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_admin_expense_url(expense), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), admin_expense_url(expense), class: 'btn btn-sm btn-danger',           method: :delete,
                                            data: { confirm: 'Are you sure you want to delete this ?' } %>
                          
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>

                 
                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>



